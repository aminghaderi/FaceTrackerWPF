<Window x:Class="FaceTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:WebEye.Controls.Wpf;assembly=WebEye.Controls.Wpf.WebCameraControl"
        Title="MainWindow" Width="640" Height="480" MinWidth="400" MinHeight="250">
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Right" HorizontalAlignment="Center">
            <ComboBox x:Name="comboBox" Width="115.333" DisplayMemberPath="Name" SelectionChanged="OnSelectionChanged" />
            <Button x:Name="startButton" Content="Start" Width="75" Margin="4,0,0,0" IsEnabled="False" Click="OnStartButtonClick" />
            <Button x:Name="stopButton" Content="Stop" Width="75" Margin="4,0,0,0" IsEnabled="False" Click="OnStopButtonClick" />
            <Button x:Name="imageButton" Content="Image" Width="75" Margin="4,0,0,0" IsEnabled="False" Click="OnImageButtonClick" />
        </StackPanel>
        <Image x:Name="webCameraView" />
    </DockPanel>
</Window>
